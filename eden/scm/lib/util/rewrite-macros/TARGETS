    name = "rewrite-macros",
    srcs = glob(["src/**/*.rs"]),
    crate_root = "src/lib.rs",
    proc_macro = True,
    rustc_flags = [
        "--crate-type",
        "proc-macro",
    ],
    deps = [
        "fbsource//third-party/rust:proc-macro2",
        "//eden/scm/lib/util/rewrite-macros/tree-pattern-match:tree-pattern-match",
    ],
)
